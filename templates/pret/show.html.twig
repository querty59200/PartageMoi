                <th>DateFin</th>
                <td>{{ pret.dateFin ? pret.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('prets') }}">back to list</a>

    <a class="btn btn-primary" href="{{ path('pret_edit', {'id': pret.id}) }}">edit</a>

