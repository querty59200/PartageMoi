{% extends 'base.html.twig' %}

{% block title %}Pret{% endblock %}

{% block body %}
    <h1>Pret</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pret.id }}</td>
            </tr>
            <tr>
                <th>MontantRente</th>
                <td>{{ pret.montantRente }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ pret.dateDebut ? pret.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
